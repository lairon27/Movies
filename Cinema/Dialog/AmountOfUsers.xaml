<Window x:Class="Cinema.Dialog.AmountOfUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cinema.Dialog"
        mc:Ignorable="d"
        Title="AmountOfUsers" Height="100" Width="250">
    <StackPanel>
        <TextBox x:Name="count" Width="100" Height="20"/>
        <Button Width="100" Height="20" Content="Show" Margin="5" Click="Button_Click" />
    </StackPanel>
</Window>
