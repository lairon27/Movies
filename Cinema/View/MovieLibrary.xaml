<UserControl x:Class="Cinema.MovieLibrary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cinema"
        mc:Ignorable="d"
        Height="450" Width="800">
    <UserControl.Resources>
        <Style x:Key="placeHolder" TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <TextBox Text="{Binding Path=Text,
                                                RelativeSource={RelativeSource TemplatedParent}, 
                                                Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"
                                 x:Name="textSource" 
                                 Background="Transparent" 
                                 Panel.ZIndex="2" />
                            <TextBox Text="{TemplateBinding Tag}" Background="{TemplateBinding Background}" Panel.ZIndex="1">
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Foreground" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=Text, Source={x:Reference textSource}}" Value="">
                                                <Setter Property="Foreground" Value="LightGray"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <!--<TextBox Style="{StaticResource placeHolder}" Tag="Name of customer" Margin="22,19,463,370" />-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="239*" />
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="356*" />
        </Grid.ColumnDefinitions>
        
        <ListBox Grid.Column="0"  ItemsSource="{Binding View}"
                 SelectedItem="{Binding SelectedMovie}" Grid.ColumnSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="18" Text="{Binding Path=MovieName}" />
                        <TextBlock Text="{Binding Path=Year}" />
                        <TextBlock Text="{Binding Path=Rating}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1" DataContext="{Binding SelectedMovie}" Grid.ColumnSpan="2" Margin="205,0,0,0">
            <TextBlock Text="Movie" />
            <TextBox Text="{Binding MovieName, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Year" />
            <TextBox Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Rating" />
            <TextBox Text="{Binding Rating, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!--<StackPanel Grid.Column="1"  Grid.ColumnSpan="2" Margin="205,0,0,0">
            <TextBlock Height="23" HorizontalAlignment="Center" Margin="0,165,0,0" Name="textBlock1" Width="92" />
            <TextBox Style="{StaticResource placeHolder}" Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="202" Tag="movie search" />
        </StackPanel>-->

        <StackPanel Grid.Column="1"  Grid.ColumnSpan="3" Margin="205,0,0,0">
            <TextBox Style="{StaticResource placeHolder}" Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="202" Height="24" Tag="movie search"  Margin="10,150,0,0"
                     FontSize="14" FontFamily="Montsserat"/>
        </StackPanel>
    </Grid>
</UserControl>
