<UserControl x:Class="Cinema.View.Users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:cinema="clr-namespace:Cinema" d:DataContext="{d:DesignInstance Type=cinema:UsersVM}"
             mc:Ignorable="d">
    <Grid>
        <!--<Label Content="Hello"/>-->
        <!--<Image x:Name="img"   Height="200" Width="150"/>-->
        <!--<Image Source="pack://application:,,,/Resources/avengersInfinityWar.jpg"/>-->
        <!--<Image Source="pack://application:,,,/images/item0.jpg" Width="150" Height="200"/>-->
        <!--<Image Source="../images/item0.jpg"  Height="200" Width="150"/>-->
        <!--<Image Source="../Resources/sample_640×426.jpeg"/>-->

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Users" Grid.ColumnSpan="3" Grid.Row="0" TextAlignment="Center" FontSize="24"/>

        <ListBox SelectedItem="{Binding SelectedUsers}"  ItemsSource="{Binding user}" Grid.Column="0" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Width="200">
                        <TextBlock FontSize="14" Text="{Binding Path=UserNumber}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox SelectedItem="{Binding SelectedUsers}"  ItemsSource="{Binding user}" Grid.Column="1" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Width="200">
                        <TextBlock FontSize="14" Text="{Binding Path=UserName}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="2"  DataContext="{Binding SelectedUsers}" Grid.Row="1">
            <TextBlock Text="Liked Movies" FontWeight="Bold" />
            <TextBlock Text="{Binding LikedMovies, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

    </Grid>
</UserControl>
